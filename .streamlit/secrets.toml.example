# Streamlit secrets configuration
# Copy this file to .streamlit/secrets.toml and configure your values

# LLM Backend Configuration
# Set to "openai" or "ollama"
LLM_BACKEND = "openai"

# OpenAI Configuration (required if using OpenAI backend)
OPENAI_API_KEY = "your_openai_api_key_here"

# Admin Configuration
[admin_emails]
# Replace with your actual admin email(s)
# your_email@example.com = true

# Invited Users Configuration
[invited_users]
# Replace with actual user invitations
# "user@example.com" = "User Name"

# Usage Analytics Configuration
USAGE_DB_PATH = "./usage.db"

# Optional: Ollama Configuration (if using Ollama backend)
# OLLAMA_HOST = "http://localhost:11434"